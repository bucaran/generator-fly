{
  "name": "<%= pluginName %>",
  "version": "0.0.0",
  "description": "<%= description %>",
  "license": "MIT",
  "repository": "https://github.com/<%= githubUserName %>/<%= pluginName %>",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "keywords":[
    "fly",
    "fly-plugin",
    "<%= pluginSlugName %>"
  ],
  "scripts": {
    "build": "echo No build task specified.",
    "deploy": "npm run test && git push origin master && npm publish",
    "test": "<%= testCommand %>"
  },
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= website %>"
  },
  "dependencies": {},<% if (testTool == 'tape') { %>
  "devDependencies": {
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "xo": "*"
  },<% } %> <% if (testTool == 'jasmine') { %>
  "devDependencies": {
    "jasmine-node": "^1.14.5"
  },<% } %> <% if (testTool == 'mocha') { %>
  "devDependencies": {
    "mocha": "^3.0.2"
  },<% } %> <% if (testTool == 'ava') { %>
  "devDependencies": {
    "ava": "^0.16.0"
  },<% } %>
  "engines": {
    "node": ">= 4.6"
  },
  "xo": {
    "semicolon": false,
    "ignore": [
      "test/*.js"
    ]
  }
}
